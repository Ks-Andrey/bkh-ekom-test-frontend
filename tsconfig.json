{
  "compilerOptions": {
    "target": "esnext",              
    "module": "commonjs",            
    "rootDir": "./src",              
    "outDir": "./dist",              
    "strict": true,                  
    "esModuleInterop": true,         
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,            
    "sourceMap": true,               
    "declaration": true,             
    "jsx": "react-jsx"               
  },
  "include": ["src"]
}
